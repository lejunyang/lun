{
  "extends": "../../tsconfig.base.json",
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "include": [
    "./index.ts",
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.tsx",
    "../../global.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "declarationDir": "dist",
    "jsx": "react-jsx",
