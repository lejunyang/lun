{
  "name": "@lun-web/react",
  "version": "0.0.1-alpha.3",
  "description": "Compatible @lun-web/components layer for versions before React19",
  "keywords": [
    "web-components",
    "react-components",
    "custom-elements",
    "components-library"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lejunyang/lun.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/lejunyang/lun/issues"
  },
  "homepage": "https://lejunyang.github.io/lun/",
  "author": {
    "name": "lejunyang",
    "email": "lejunyang@foxmail.com"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts",
      "browser": {
        "development": "./dist/lun-web-react.development.js",
        "default": "./dist/lun-web-react.production.js"
      },
      "default": {
        "development": "./dist/lun-web-react.development.js",
        "default": "./dist/lun-web-react.production.js"
      }
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build:dev": "cross-env NODE_ENV=development vite build",
    "build:prod": "cross-env NODE_ENV=production vite build",
    "build:iife": "cross-env NODE_ENV=development BUILD_FORMAT=iife vite build",
    "build": "rimraf ./dist && pnpm build:dev && pnpm build:prod && pnpm build:iife",
    "build:noType": "cross-env NO_TYPE_EMIT=true pnpm build",
    "v": "npm version"
  },
  "dependencies": {
    "@lun-web/components": "workspace:^"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "catalog:",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "cross-env": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "rimraf": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
    "vitest": "catalog:",
    "vue": "catalog:"
  },
  "peerDependencies": {
    "react": ">=16.8",
    "react-dom": ">=16.8",
    "vue": "^3.2.0"
  },
  "publishConfig": {
    "provenance": true
  }
}
