{
  "name": "@lun-web/components",
  "version": "0.0.1-alpha.6",
  "description": "A full-featured web components library based on Vue3",
  "keywords": [
    "web-components",
    "shadow-dom",
    "custom-elements",
    "components-library",
    "vue3"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lejunyang/lun.git",
    "directory": "packages/components"
  },
  "bugs": {
    "url": "https://github.com/lejunyang/lun/issues"
  },
  "homepage": "https://lejunyang.github.io/lun/",
  "author": {
    "name": "lejunyang",
    "email": "lejunyang@foxmail.com"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts",
      "browser": {
        "development": "./dist/lun-web-components.development.js",
        "default": "./dist/lun-web-components.production.js"
      },
      "default": {
        "development": "./dist/lun-web-components.development.js",
        "default": "./dist/lun-web-components.production.js"
      }
    },
    "./package.json": "./package.json",
    "./elements-types-vue": {
      "types": "./dist/elements-types-vue.d.ts"
    },
    "./elements-types-react": {
      "types": "./dist/elements-types-react.d.ts"
    },
    "./elements-types-html": {
      "types": "./dist/elements-types-html.d.ts"
    },
    "./define/*": "./dist/defines/dev-es/*.define.js",
    "./dist/*": "./dist/*"
  },
  "types": "./dist/index.d.ts",
  "jsdelivr": "./dist/lun-web-components.iife.js",
  "unpkg": "./dist/lun-web-components.iife.js",
  "scripts": {
    "dev": "vite",
    "build:dev": "cross-env NODE_ENV=development vite build",
    "build:prod": "cross-env NODE_ENV=production vite build",
    "build:iife": "cross-env NODE_ENV=development BUILD_FORMAT=iife vite build",
    "build": "rimraf ./dist && pnpm build:dev && pnpm build:prod && pnpm build:iife && node ./processTypeFiles.js",
    "build:noType": "cross-env NO_TYPE_EMIT=true rimraf ./dist && pnpm build:dev && pnpm build:prod && pnpm build:iife",
    "preview": "vite preview",
    "v": "npm version"
  },
  "dependencies": {
    "@floating-ui/dom": "catalog:",
    "@floating-ui/utils": "catalog:",
    "@floating-ui/vue": "catalog:",
    "@lun-web/core": "workspace:^",
    "@lun-web/plugins": "workspace:^",
    "@lun-web/utils": "workspace:^"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@floating-ui/core": "^1.6.4",
    "@rollup/plugin-replace": "catalog:",
    "@vitejs/plugin-vue": "catalog:",
    "@vitejs/plugin-vue-jsx": "catalog:",
    "@vue/runtime-core": "catalog:",
    "@vue/runtime-dom": "catalog:",
    "cross-env": "catalog:",
    "csstype": "^3.1.3",
    "glob": "^10.4.2",
    "postcss-logical": "catalog:",
    "rimraf": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
    "vitest": "catalog:",
    "vue": "catalog:",
    "vue-tsc": "catalog:"
  },
  "publishConfig": {
    "provenance": true
  }
}
