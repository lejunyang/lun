{
  "extends": "../../tsconfig.json",
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "../../global.d.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "common": ["src/common"],
      "config": ["src/components/config"],
      "custom": ["src/custom"],
      "utils": ["src/utils"],
      "hooks": ["src/hooks"],
    },
  }
}