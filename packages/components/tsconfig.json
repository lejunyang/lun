{
  "extends": "../../tsconfig.base.json",
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
  ],
  "include": [
    "./index.ts",
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.tsx",
    "./src/**/*.vue",
    "../../global.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "declarationDir": "dist",
    "paths": {
      "common": ["src/common"],
      "config": ["src/components/config"],
      "custom": ["src/custom"],
      "utils": ["src/utils"],
      "hooks": ["src/hooks"],
      "@lun-web/core": ["../core/index.ts"],
      "@lun-web/utils": ["../utils/index.ts"],
      "@lun-web/plugins/vue": ["../plugins/src/vue/vue.index.ts"],
      "@vue/runtime-dom": ["../../node_modules/@vue/runtime-dom"],
      "@vue/runtime-core": ["../../node_modules/@vue/runtime-core"]
    }
  }
}
