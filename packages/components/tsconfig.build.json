{
  "extends": "./tsconfig.json",
  "include": [
    "./index.ts",
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.tsx",
    "../../global.d.ts"
  ],
  "exclude": [
    "src/__test__/**/*",
    "src/main.ts"
  ],
  "compilerOptions": {
    "paths": {
      "@/*": [
        "src/*"
      ],
      "common": [
        "src/common"
      ],
      "config": [
        "src/components/config"
      ],
      "custom": [
        "src/custom"
      ],
      "utils": [
        "src/utils"
      ],
      "hooks": [
        "src/hooks"
      ],
    },
  }
}