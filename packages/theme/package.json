{
  "name": "@lun/theme",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "files": [
    "./dist",
    "./src/scss"
  ],
  "main": "./dist/lun-theme.umd.cjs",
  "module": "./dist/lun-theme.js",
  "exports": {
    ".": {
      "require": "./dist/lun-theme.umd.cjs",
      "import": "./dist/lun-theme.js",
      "types": "./dist/index.d.ts"
    },
    "./scss/common/*.scss": "./src/scss/common/*.scss",
    "./scss/mixins/*.scss": "./src/scss/mixins/*.scss",
    "./scss/public/*.scss": "./src/scss/public/*.scss",
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "rimraf ./dist & vite build -w & tsc -w -p ./tsconfig.build.json",
    "gen": "node ./generate.cjs > ./src/scss/public/colors.scss",
    "build:noType": "rimraf ./dist && vite build",
    "build": "rimraf ./dist && vite build && tsc -p ./tsconfig.build.json",
    "preview": "vite preview"
  },
  "dependencies": {
    "@lun/components": "workspace:^",
    "@radix-ui/colors": "^2.1.0"
  },
  "devDependencies": {
    "postcss-logical": "^7.0.0",
    "rimraf": "^5.0.5",
    "vitest": "^0.34.6"
  }
}
