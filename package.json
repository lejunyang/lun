    "@lun/utils": "workspace:^",
    "@vueuse/core": "^10.11.0",
    "esbuild-wasm": "^0.21.5",
    "monaco-editor": "^0.50.0",
    "react": "rc",
    "react-dom": "rc",
    "vue": "catalog:"
  },
  "overrides": {
    "@types/react": "npm:types-react@rc",
    "@types/react-dom": "npm:types-react-dom@rc"
  },
