{
  "references": [
    {
      "path": "./tsconfig.docs.vue.json"
    },
    {
      "path": "./tsconfig.docs.react.json"
    }
  ],
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    // disable strict for doc code cases
    "strict": false,
    "paths": {
      "data": ["./src/utils/data.ts"],
      "@lun-web/components": ["./packages/components/index.ts"],
      "@lun-web/core": ["./packages/core/index.ts"]
    },
    "types": ["./packages/components/dist/elements-types-vue.d.ts"]
  },
  "exclude": [
    "src/docs/.vitepress/cache",
    "src/docs/.vitepress/dist",
    "src/docs/.vitepress/temp",
    "./utils/testSetup.ts"
  ],
  "include": [
    "./src/utils/*.ts",
    "./utils/**/*.ts",
    "global.d.ts",
    "./packages/components/dist/elements-types-vue.d.ts"
  ]
}
